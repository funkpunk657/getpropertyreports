/* FULL WIDTH SLIDER
// Uses Slick JS and basic CSS styles. All custom styles for this slider are
// defined below.
*/

.slider { 
  width: 100%;
  height: 600px;
  margin-top: 80px;
}

.slider .background {
  height: 600px;
  width: 100%;
  background-position: center; 
  background-size: cover;
}

.slider .description,
.slider .testimonial,
.slider .testimonial .left,
.slider .testimonial .right {
  position: absolute;
  margin-top: -45px;
  top: 50%;
  -webkit-transform: translateY(-50%);
  -ms-transform: translateY(-50%);
  transform: translateY(-50%);
  text-align: center;
}

.slider .testimonial { 
  right: 0; 
  padding: 0 60px;
  color: white;
  font-size: 24px;
  margin-top: 0px;
}

.slider .testimonial .left { left: 5px; background: none; outline: none; }
.slider .testimonial .right { right: 5px; background: none; outline: none; }

.slider .testimonial .fa-star {
  color: #ef3a6b;
  font-size: 30px;
}

.slider h2 {
  color: white;
  font-size: 60px;
  margin: 60px 0px 30px;
}


.slider > .slick-list {
  display: block;
  height: 600px;
}

.slick-dots {
  position: absolute;
  left: 50%;
  margin-left: -105px;
  bottom: 45px;
}

.slick-dots li {
  display: inline-block;
}

.slick-dots button {
  outline: none;
  background: none;
  color: white;
}

.slick-dots button:hover {
  opacity: 0.7;
}

/*== RESPONSIVENESS ==*/
@media (min-width: 768px) and (max-width: 991px) {
  .slider h2 {
    font-size: 50px;
  }
  .slider .testimonial {
    font-size: 20px;
  }
  #probiotics .description,
  #protein .description {
    left: -15px;
  }
  #protein .testimonial {
    width: 38%;
  }
  #probiotics .testimonial {
    right: -15px !important;
  }
  #omega-3 .testimonial {
    top: 60%;
  }
  .description h2 {
    font-size: 40px;
  }
  .description .btn-pink {
    font-size: 14px;
  }
}

@media (max-width: 767px) {
  .slider .background {
    background-position: left -140px center;
  }
  .slider .description,
  .slider .testimonial {
    position: relative;
    margin-top: 0;
  }
  
  .slider .description {
    top: 20%;
  }
  
  .slider .testimonial {
    font-size: 20px;
    position: absolute;
    top: 60%;
    left: 0;
  }
  
}

@media (min-width: 468px) {
  #probiotics {
    background-image: url("https:{{ 'hero-PB.jpg' | asset_url }}");
  }
  #protein {
    background-image: url("https:{{ 'hero-PT.jpg' | asset_url }}");
  }
  #omega-3 {
    background-image: url("https:{{ 'hero-O3.jpg' | asset_url }}");
  }
  .btn-container { display: none; }
}

@media (max-width: 467px) {
  #probiotics {
    background-image: url("https:{{ 'hero-PB-responsive.jpg' | asset_url }}");
    background-position: center center;
  }
  #protein {
    background-image: url("https:{{ 'hero-PT-responsive.jpg' | asset_url }}");
    background-position: center center;
  }
  #omega-3 {
    background-image: url("https:{{ 'hero-O3-responsive.jpg' | asset_url }}");
    background-position: center center;
  }
  .testimonial,
  .description {
    width: 100% !important;
  }
  .testimonial {
    top: 110% !important;
  }
  .description {
    top: 15% !important;
  }
  .description h2 {
    font-size: 50px !important;
  }
  #omega-3 .description {
    top: 11% !important;
  }
  .btn-container {
    display: block;
    position: absolute;
    top: 87%;
    width: 100%;
    text-align: center;
  }
  #probiotics .description {
    top:12% !important;
  }
  .btn-container a:hover { text-decoration: none; }
  .btn-container button { display: block; margin: 0 auto; }
  .slider,
  .slider .background,
  .slider .slick-list { height: 1200px; }
  .slider .slick-dots { bottom: 15px; }
  .slider .slick-arrow { top: 12.5% !important; }
  .slider .slick-arrow.left { left: 15px !important; }
  .slider .slick-arrow.right { right: 15px !important; }
}
