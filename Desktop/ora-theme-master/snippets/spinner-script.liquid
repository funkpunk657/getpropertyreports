 <script id="spinner_script">
  //==== MOBILE DEVICE TouchSwipe handling ====//  
  // Handle mobile swipes (left for clockwise) on the image!
  $('.product-photo-container').swipe( {
    swipeStatus:function(event, phase, direction, distance, duration, fingers, fingerData, currentDirection)
      {
        if (currentDirection == "left" && distance > 50) {
          spinner();
        } else if (currentDirection == "right" && distance > 50) {
          spinner("reverse");
        }

      },
      threshold:200,
      maxTimeThreshold:5000,
      allowPageScroll: "vertical",
      preventDefaultEvents: false,
      fingers: 1
  });

  function spinner(reverse) {
    currentIndex = $('.product-photo.show').attr("id");

    if (reverse) {
      // We're spinning anti-clockwise here
      if (currentIndex <= 10 && currentIndex !== "01") {
        nextIndex = "0"+(parseInt(currentIndex)-1);  
      } else if (currentIndex == "01") {
        nextIndex = $('.product-photo').length;
      } else {
        nextIndex = parseInt(currentIndex)-1;
      }

    } else {
      // We're spinning clockwise here
      if (currentIndex < 9) {
        nextIndex = "0"+(parseInt(currentIndex)+1);  
      } else if (currentIndex == $('.product-photo').length) {
        nextIndex = "01";
      } else {
        nextIndex = parseInt(currentIndex)+1;
      }
    }
    $('#'+currentIndex).removeClass('show');
    $('#'+nextIndex).addClass('show');
    $('.zoomContainer').remove();
    $(".show img").elevateZoom({ zoomType: "window", zoomWindowWidth: 500, scrollZoom: true, easing: true });
  }
</script>