<!-- Filters: Product Types -->
{% assign product_types_list = "" %}
{% for product in collections["shop"].products %}
  {% for tag in product.tags %}
    {% if tag contains "product_type=" %} 
      {% assign product_type = tag | split: "=" | last | append: "," %}
      {% unless product_types_list contains product_type %}
	      {% assign product_types_list = product_types_list | append: product_type %}
	    {% endunless %}
    {% endif %}
  {% endfor %}
{% endfor %}
<!-- Create array of Product Types -->
{% assign product_types = product_types_list | split: "," %}

