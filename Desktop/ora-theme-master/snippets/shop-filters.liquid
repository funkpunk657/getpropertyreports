<!-- Filters: Flavors -->
{% assign flavors_list = "" %}
{% for product in collections["shop"].products %}
  {% for tag in product.tags %}
    {% if tag contains "flavor=" %} 
      {% assign flavor = tag | split: "=" | last | append: "," %}
      {% unless flavors_list contains flavor %}
	      {% assign flavors_list = flavors_list | append: flavor %}
	    {% endunless %}
    {% endif %}
  {% endfor %}
  {% for option in product.options_with_values %}
    {% if option.name == "Flavor" %}
      {% for variant in product.variants %}
        {% for value in option.values %}
          {% assign flavor = value | downcase | append: "," %}
          {% unless flavors_list contains flavor %}
            {% assign flavors_list = flavors_list | append: flavor %}
          {% endunless %}
        {% endfor %}
      {% endfor %}
    {% endif %}
  {% endfor %}
{% endfor %}

<!-- Create array of Flavors -->
{% assign flavors = flavors_list | split: "," %}

