  	flex: 2; 
  	margin: 30px 15px;
  }
  .nav-desktop .sub-nav .link { 
  	flex: 3; 
    margin: 30px 0;
    padding: 0 30px;
    border-left: 1px solid {{ settings.lighter_color }};
  }

  .nav-desktop .sub-nav .has-subnav .subcategory__title {
  	text-transform: uppercase;
  	font-weight: 500;
  	color: #c7c4c4;
  	font-size: 12px;
  	letter-spacing: normal;
  	padding: 30px 15px 0;
  }
  .nav-desktop .sub-nav .has-subnav ul {
  	list-style: none;
  	padding: 7.5px 0;
  }
  .nav-desktop .sub-nav .has-subnav ul li a {
  	font-size: 13px;
  	letter-spacing: normal;
  	line-height: 1em;
  }

  /* Navigation: Desktop Subscriptions */
  .nav-desktop .sub-nav .link p { font-size: 13px; }
  .nav-desktop .sub-nav .link a { font-size: 13px; color: {{ settings.link_color }}; letter-spacing: normal; }
  .nav-desktop .sub-nav .link a:hover { font-size: 13px; color: {{ settings.link_color_hover }}; letter-spacing: normal; }
  .nav-desktop .sub-nav .link > a {
  	text-transform: uppercase;
  	font-weight: 500;
  	color: #c7c4c4;
  	font-size: 12px;
  }

  /* Navigation: Mobile */
  @media (max-width: 767px) {
  	.nav-mobile, .nav-mobile-button { display: block; }
  	.nav-desktop { display: none; }

  	.nav-mobile-button button {
	    background: none;
	    box-shadow: none;
	    border: none;
	    padding: 15px;
	    position: absolute;
	    z-index: 2;
  	}
  	.nav-mobile amp-img,
  	.nav-mobile-button amp-img {
  		border: none;
  	}
  	.nav-mobile {
  		width: 66%;
  	}
  	.nav-mobile ul {
  		list-style: none;
  		padding: 0;
  		margin: 0;
  	}
  	.nav-mobile ul li {
  		border-bottom: 1px solid {{ settings.lighter_color }};
  		padding: 15px 22.5px;
  		width: 100%;
  		font-size: 14px;
  	}
  	.nav-mobile ul li a {
  		color: {{ settings.copy_color }};
  	}
  	.nav-mobile .logo {
  		padding: 15px 0;
  	}
  	.nav-mobile #logo {
  		display: block;
  		width: 45px;
  		margin: 0 auto;
  		border: none;
  	}
  	.nav-mobile .link a {
  		color: {{ settings.link_color }}
  	}
  	/* Navigation: Accordion */
  	.accordion__title {
  		background-color: {{ settings.background_color }};
	    border: none;
	    font-size: 14px;
	    outline: none;
  	}
  	.accordion__title:after {
  		content: "\e93a";
  		font-family: "LinearIcons";
  		font-size: 10px;
	    font-weight: 700;
	    margin-left: 10px;
	    margin-top: 5px;
	    position: absolute;
  		color: {{ settings.copy_color }};
  	}
  	.accordion__title:active {
  		outline: none;
  	}
  	.nav-mobile .subcategory__title {
  		font-size: 11px;
  		font-weight: 500;
  		text-transform: uppercase;
  		letter-spacing: 1px;
  		color: #c7c4c4;
  	}
  	.nav-mobile .sub-nav {
  		margin-left: -22.5px;
  		margin-top: 15px;
  		padding-top: 7.5px;
  		padding-left: 15px;
  		border-top: 1px solid {{ settings.lighter_color }};
  	}
  	.nav-mobile .sub-nav li {
  		padding: 12.5px 7.5px;
  		border: none;
  	}
  	.nav-mobile .sub-nav ul {
  		margin-top: 7.5px;
  	}
  	.nav-mobile .sub-nav ul li {
  		font-size: 13px;
  		border: none;
  	}

  }




	/* ================= */
  /* ==== Article ==== */
  /* ================= */
