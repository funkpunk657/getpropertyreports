	}

	blockquote {
		font-size: 30px;
	}

	table {
    padding: 30px;
    border: 1px solid {{ settings.lighter_color }};
    border-radius: 8px;
	}

	td,
	td p {
		font-size: 16px;
		padding: 7.5px 15px;
	}
