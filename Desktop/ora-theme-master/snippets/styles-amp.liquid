<!-- Styles: AMP Custom -->
<style amp-custom>
  /* Fonts */
  /* Fonts: Avenir; */
	@font-face {
	  font-family: 'Avenir Web';
	  src: url('font-AvenirLTStd-Book.otf');
	  font-weight: normal;
	}
	@font-face {
	  font-family: 'Avenir Web';
	  src: url('font-AvenirLTStd-Light.otf');
	  font-weight: 100;
	}
	@font-face {
	  font-family: 'Avenir Web';
	  src: url('font-AvenirLTStd-Oblique.otf');
	  font-style: italic;
	}
	@font-face {
	  font-family: 'Avenir Web';
	  src: url('font-AvenirLTStd-Medium.otf');
	  font-weight: 500;
	}
	@font-face {
	  font-family: 'Avenir Web';
	  src: url('font-AvenirLTStd-MediumOblique.otf');
	  font-weight: 500;
	  font-style: italic;
	}
	@font-face {
	  font-family: 'Avenir Web';
	  src: url('font-AvenirLTStd-Heavy.otf');
	  font-weight: 700;
	}
