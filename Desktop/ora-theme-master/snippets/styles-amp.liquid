  /* Article: Pinterest Image */
  .article__header .article__pinterest-image {
    /*z-index: -1;*/
    /*position: absolute;*/
  }
  /* Article: Title */
  .article__title {
  	font-size: 60px;
  	font-family: {{ settings.body_font }};
  	margin-right: -10%;
  	font-style: normal;
  	margin-top: 0;
  	color: {{ settings.copy_color }};
  	font-weight: 100;
  }
  .article__title-wrapper,
	.article__author-wrapper {
		margin-left: 30%;
		margin-right: 15%;
		position: absolute;
  	top: 50%;
  	transform: translateY(-50%);
	}

	/* Article: Category */
	.article__category {
		text-transform: uppercase;
		font-size: 20px;
		color: #c7c4c4;
	}

	/* Article: Author */
	.article__author-wrapper {
		margin-top: 12.5%;
	}
	.article__author,
	.article__author-link {
		margin-bottom: 3.75px;
		font-size: 18px;
	}

  /* Article: Content */
  .article__content {
  	max-width: 720px;
  	padding: 30px;
  	margin: 0 auto;
  }
  .article__content amp-img {
  	margin: 0 auto;
    display: block;
  }

  /* Article: Recommendations */
	.article__recommendations {
		text-align: center;
		-webkit-display: flex;
  	-moz-display: flex;
  	-ms-display: flex;
  	display: flex;
		justify-content: center;
		flex-flow: row wrap;
		padding-top: 15px;
		border-top: 1px solid {{ settings.lighter_color }};
		max-width: 720px;
		margin: 0 auto;
	}

	.recommendation__text {
		flex: none;
		width: 100%;
		margin: 30px;
		font-size: 2em;
	}

	.article__recommendation {
		flex: 1 0;
		box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.50);
		margin: 15px;
		max-width: 320px;
	}

	img {
		width: 100%;
		border-radius: 0;
		margin: 0;
	}

	#article .article__content amp-img {
		border-radius: 8px;
	}
	#article .article__recommendation amp-img {
		border-radius: 0;
	}

	/* Recommendation: Title */
	.recommendation__title {
		padding: 15px 15px 0;
		font-size: 16px;
		margin: 0;
	}
	.recommendation__title a {
		font-weight: 500;
	}

	/* Recommendation: Description */
	.recommendation__description { padding: 7.5px 22.5px 22.5px; }
	.recommendation__description h2 { display: none; }
	.recommendation__description,
  .recommendation__description p { font-family: 'Avenir', sans-serif; font-size: 14px; margin: 0; }

	/* Recommendation: Actions */
	.recommendation__actions { padding: 0 22.5px 22.5px; }
	.recommendation__actions button { 
		cursor: pointer;
		width: 100%; 
		display: block;
		font-family: 'Avenir', sans-serif;
		font-size: 14px;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 1.5px;
		padding: 10px 15px;
		text-shadow: none;
		box-shadow: none;
		border: none;
		border-radius: 0;
		height: 3.5em;
		margin: 0 auto 0;
		background-color: transparent;
		border: 2px solid {{ settings.accent_color_1 }};
		color: {{ settings.accent_color_1 }};
	}

	.recommendation__actions button:hover {
		background-color: {{ settings.accent_color_1 }};
		color: white;
	}

	/* Actions */
	.actions {
		display: block;
		margin: 30px auto 60px;
		text-align: center;
	}
	/* line 100, ../styles/articles/_article.scss */
	.actions #back__button {
	  font-size: 18px;
	}
	/* line 103, ../styles/articles/_article.scss */
