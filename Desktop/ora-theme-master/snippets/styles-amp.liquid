    text-shadow: 2px 2px 40px rgba(0,0,0,0.3);
  }
  .article__header.clear_header .article__category {
  	font-weight: 500;
  }
  /* Article: Image Overlay */
  .article__header .overlay {
  	position: absolute;
  	z-index: -1;
  	top: 0;
  	left: 0;
  	width: 100%;
  	height: 100%;
  	background-color: black;
  	opacity: {% if overlay_percentage %}0.{{ overlay_percentage }}{% else %}0{% endif %};
