  	-moz-display: flex;
  	-ms-display: flex;
  	display: flex;
  	flex-flow: row nowrap;
  	justify-content: center;
  	border-bottom: 1px solid {{ settings.lighter_color }};
  	background-color: {{ settings.background_color }};
  }
  .nav-desktop.clear_header {
  	opacity: 0;
  }
  .nav-desktop.visible {
  	border-bottom: 1px solid {{ settings.lighter_color }};
  	background-color: {{ settings.background_color }};
  }

  .nav-desktop .logo {
  	position: absolute;
  	z-index: 2;
  	left: 15px;
  	top: 12.5px;
  	width: 45px;
  	margin: 0;
  }
  .nav-desktop amp-img {
  	border: none;
  }

  .nav-desktop li {
  	margin: 7.5px 15px 6px;
  }
  .nav-desktop li a {
  	text-decoration: none;
  	color: {{ settings.copy_color }};
  	font-size: 14px;
  	letter-spacing: 1px;
  }
  .nav-desktop li a:hover {
  	color: {{ settings.link_cover }};
  }
  .nav-desktop .link {
  	color: {{ settings.link_color }};
  }
  .nav-desktop .accordion__title {
  	border: none;
    font-size: 14px;
    letter-spacing: 1px;
    padding: 2px 0;
