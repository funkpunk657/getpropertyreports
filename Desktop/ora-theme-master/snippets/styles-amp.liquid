	  font-family: 'Avenir Web';
	  src: url('font-AvenirLTStd-HeavyOblique.otf');
	  font-weight: 700;
	  font-style: italic;
	}
	@font-face {
	  font-family: 'LinearIcons';
	  src: url('{{ "font-linearIcons.ttf" | asset_url }}');
	}
	
  /* Typography */
  h1, h3, blockquote {
  	font-weight: normal;
  	font-style: italic;
  	font-family: 'Baskerville', 'Libre Baskerville', Georgia, Garamond, serif;
  	color: {{ settings.copy_color }};
  	line-height: 1.62em;
  }
  h2, h4, h5, h6, p, a, label, td, th, li, span {
  	font-weight: normal;
  	font-family: 'Avenir', Helvetica, Arial, sans-serif;
  	color: {{ settings.copy_color }};
  }
  a {
  	color: {{ settings.link_color }};
  	text-decoration: none;
  }
  a:hover {
  	color: {{ settings.link_color_hover }};
  }
  h1 {
  	font-size: 3em;
  }
  div, p {
  	font-size: 18px;
  	line-height: 1.62em;
  }

  /* Body */
  body {
    background-color: white;
  }

  /* Images */
  amp-img {
    border-bottom: 1px solid {{ settings.lighter_color }};
  }

  /* Sidebar */
  amp-sidebar {
  	background-color: {{ settings.background_color }};
  	box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.50);
  }

  /* Linear Icons */
	i.linear:before {
		font-family: "LinearIcons";
		font-style: normal;
		color: {{ settings.link_color }};
		font-size: 18px;
		vertical-align: sub;
	}
	/* Linear Icons: Arrows */
	i.arrow__right:before {
		content: "\e944";
		margin-right: 7.5px;
	}
	i.arrow__left:before {
		content: "\e943";
		margin-right: 7.5px;
	}
	/* Accordions */
	amp-accordion h6[aria-expanded="true"] {
		color: #c7c4c4;
	}
	amp-accordion h6[aria-expanded="true"]:after {
		color: #c7c4c4;
	}

  /* ==================== */
  /* ==== Navigation ==== */
  /* ==================== */
  .nav-mobile, .nav-mobile-button { display: none; }
  .nav-desktop { display: block; }

  /* Navigation: Desktop */
