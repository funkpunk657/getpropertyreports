<!-- Filters: Flavors -->
{% capture flavors_list %}
{% for product in collections["shop"].products %}
  {% for tag in product.tags %}
    {% if tag contains "flavor=" %} 
      {% assign flavor = tag | split: "=" | last %} {{ flavor }},
    {% endif %}
  {% endfor %}
{% endfor %}
{% endcapture %}
{% assign flavors = flavors_list | split: "," | strip %}

