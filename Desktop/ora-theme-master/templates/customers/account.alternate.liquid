    <!--  START ACCOUNT INFO  -->
    <div class="col-md-12" style="padding-bottom: 150px;">
      <h1 style="padding-bottom:10px">account information</h1>
      <div class="col-md-6 customer-account">
        <div class="col-xs-12 col-md-12">
        <h3>Contact Information</h3>
        <div class="col-md-2 col-sm-2 col-xs-2 labels">
          <p><b>Name:</b></p>
          <p><b>E-mail:</b></p>
          <p><b>Phone:</b></p>
        </div>
        <div class="col-md-10 col-sm-10 col-xs-10 values">
          <p>Hi, {{ customer.name }}</p>
          <p>{{ customer.email }}</p>
          <p>{{ customer.default_address.phone }}</p>
        </div>
        </div>
        <div class="col-xs-12 col-md-12">
        <h3>User Information</h3>
        <div class="col-md-2 col-sm-2 col-xs-2 labels">
          <p><b>Username:</b></p>
          <p><b>Password:</b></p>
        </div>
        <div class="col-md-10 col-sm-10 col-xs-10 values">
          <p>{{ customer.email }}</p>
          <p>*****</p>
        </div>
      </div>
      </div>
      <div class="col-md-6 customer-account">
        <div class="col-xs-12 col-md-12">
        <h3>Shipping Address</h3>
        <div class="col-md-2 col-sm-2 col-xs-2 labels">
          <p><b>Street:</b></p>
          <p><b>City:</b></p>
          <p><b>State:</b></p>
        </div>
        <div class="col-md-10 col-sm-10 col-xs-10 values">
          {% assign s_address = latest_order.shipping_address %}
          <p>{{ s_address.street }}</p>
          <p>{{ s_address.city }}</p>
          {% capture state_zip %}{{ s_address.province }}, {{ s_address.zip }}{% endcapture%}
          <p>{{ state_zip }}</p>
        </div>
        </div>
        <div class="col-xs-12 col-md-12">
        <h3>Billing Address</h3>
        <div class="col-md-2 col-sm-2 col-xs-2 labels">
          <p><b>Street:</b></p>
          <p><b>City:</b></p>
          <p><b>State:</b></p>
        </div>
        <div class="col-md-10 col-sm-10 col-xs-10 values">
          {% assign b_address = latest_order.billing_address %}
          <p>{{ b_address.street }}</p>
          <p>{{ b_address.city }}</p>
          {% capture state_zip %}{{ b_address.province }}, {{ b_address.zip }}{% endcapture%}
          <p>{{ state_zip }}</p>
        </div>
        <div>
          <a href="/account/addresses"><button class="btn-aqua menu-btn-left" style="margin-top:80px;" >EDIT ADDRESSES</button></a>
        </div>
      </div>
      </div>
