      <h1 class="text-header">
        My Account.
      </h1>
    </div>
    <!--  END HEADER  -->
    <!--  START ACCOUNT  -->
      <div class="col-md-12" style="padding-bottom: 50px;">
        <h1 style="padding-bottom:20px">{{ customer.first_name }} | recent orders</h1>
        {% if customer.orders.size != 0 %}
        <table id="your-account">
          <thead style="font-family: 'Josefin Sans'; color:#5b86c9; letter-spacing:1px">
            <tr>
              <th>Date</th>
              <th>Item</th>
              <th>Product</th>
              <th>Quantity</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            {% for order in customer.orders %}
              {% for item in order.line_items %}
                <tr>
                  {% assign product = item.product %}
                  <td>{{ order.created_at | date: "%D"}}</td>
                  <td><img style="max-height: 50px;" src="{{ product | img_url: 'compact' }}"></td>
                  <td>{{ product.title }}</td>
                  <td>{{ item.quantity }}</td>
                  <td>{{ item.price | money_without_trailing_zeros }}</td>
                </tr>
              {% endfor %}
            {% endfor %}
          </tbody>
        </table>
        {% else %}
          <p>{{ 'customer.orders.none' | t }}</p>
        {% endif %}
