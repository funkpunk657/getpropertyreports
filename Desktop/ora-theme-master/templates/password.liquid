{% layout none %}
<!DOCTYPE html>
<html>
  <head>
    <title>Ora Organic</title>
    <meta name="description" content="Organic Supplements | Plant-based Supplements | Vegan Supplements | Natural Supplements | Pure Supplements | Health & Wellness Supplements">
    {{ 'theme.scss.css' | asset_url | stylesheet_tag }}
    {{ 'full-slider.css' | asset_url | stylesheet_tag }}
    {{ 'custom.scss.css' | asset_url | stylesheet_tag }}
    {{ 'bootstrap-shopify.css' | asset_url | stylesheet_tag }}
    {{ 'jquery.theme.js' | asset_url | script_tag }}
    {{ 'custom.js' | asset_url | script_tag }}
    <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.js" type="text/javascript"></script>
    {{ 'jquery.fancybox.js' | asset_url | script_tag }}
    <link href='//fonts.googleapis.com/css?family=Josefin+Sans:400,700' rel='stylesheet' type='text/css'>
    <script src="{{ 'jquery.zoom.min.js' | asset_url }}" type="text/javascript"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.js"></script>
    <script src="{{ 'wufoo.js' | asset_url }}" type="text/javascript"></script>
    {{ '//downloads.mailchimp.com/js/jquery.form-n-validate.js' | script_tag }}
    {% if template contains 'customers' %}
    {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
    {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
    {% endif %}
      <!--[if lt IE 8]>
    {{ 'json2.js' | shopify_asset_url | script_tag }}
    <![endif]-->
    {{ 'option_selection.js' | shopify_asset_url | script_tag }}
    <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="apple-touch-icon" href="{{ 'apple-touch-icon.png' | asset_url }}">
    <link rel="apple-touch-icon" sizes="72x72" href="{{ 'apple-touch-icon-72x72.png' | asset_url }}">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ 'apple-touch-icon-114x114.png' | asset_url }}">
    <script> Shopify.money_format = "{{ shop.money_format }}";</script>
  </head>
  <body style="background: #fff">
    <div class="item active">
        <!-- Set the first background image using inline CSS below. -->
        <div class="fill" style="background-image:url({{'all-products.png' | asset_url }});">    
          <div class="container-bstrp-fluid launch-box-blue vertical-center" style="background: rgba(21, 32, 67, 0.5);margin-bottom: 50px;">
            <div class="col-xs-12 col-sm-12 col-md-6 col-md-push-3 launch-title">
              <h1 style="margin-top:-20px">ora</h1>
              <h3>SUPPLEMENTS REIMAGINED</h3>
              <p>organic plant-based ingredients | proven health benefits | chef designed tastes</p>
              <div class="blog-social social-icons" style="display: block; margin: 0 auto;">
                <a href="http://facebook.com/ora.organic" target="_blank" class="grey-overlay socialicons"><img src="{{'facebook-2.png' | asset_url }}"></a>
                <a href="http://instagram.com/ora_organic" target="_blank" class="grey-overlay socialicons"><img src="{{'instagram2.png' | asset_url }}"></a>
                <a href="http://twitter.com/ora_organic" target="_blank" class="grey-overlay socialicons"><img src="{{'twitter2.png' | asset_url }}"></a>
              </div><br>
              <p>press inquiries: press@ora.organic</p>
              <br>
            </div>
            <div class="col-sm-1 hidden-md hidden-lg"></div>
            <div class="col-xs-6 col-sm-5 col-md-3 col-md-pull-6 input-launch">
              <div style="margin:auto" class="launch-form">
                {% form 'storefront_password' %}
                <h1 style="font-size: 26px; color:#fff">Ready to explore?</h1>
                <div id="login_password" class="clearfix large_form" style="margin:0 auto">
                  <input type="password" name="password" value="" id="password" class="long password login-input" placeholder="Insert your launch code" style="margin: auto; max-width:200px;" />
                </div>
                <div class="login actions" style="text-align: center; margin: 20px 0">
                  <input type="submit" name="commit" class="launch-button" style="border: 1px solid white; font-size:18px; padding:10px; margin-bottom:0" value="ENTER" />		       
                </div>
                <div class="launch-form" style="font-size:18px">{{ form.errors | default_errors }}</div>
                {% endform %}
              </div>
            </div>
            <!-- START WAITING LIST SIGN UP-->
            <div class="col-xs-6 col-sm-5 col-md-3 input-launch">
              <!-- Meta Tags -->
              <meta charset="utf-8">
              <meta name="generator" content="Wufoo">
              <meta name="robots" content="index, follow">
              <!-- End Meta Tags -->
              <div style="margin:auto">
                <form id="form1" style="text-align:center; margin:auto" name="form1" class="wufoo topLabel page" accept-charset="UTF-8" autocomplete="off" enctype="multipart/form-data" method="post"novalidate action="https://oraorganic.wufoo.com/forms/z1xpzfhd1l00s1c/#public">
                  <div style="width:200px; margin:auto">
                    <header id="header" class="info">
                      <h1 style="font-size: 26px; color:#fff; margin-bottom:10px">Don't have a code?</h1>
                    </header>
                    <ul>
                      <li id="foli1" class="notranslate" style="margin:auto;">
                        <div style="text-align:center;">
                          <input id="Field1" name="Field1" type="email" spellcheck="false" class="field text login-input" value="" maxlength="255" tabindex="1" placeholder="Email Address" style="max-width:200px" required />
                        </div>
                      </li> 
                      <li class="buttons ">
                        <div style="margin:20px 0; text-align:center">
                          <input id="saveForm thanks-signup" name="saveForm" class="btTxt submit launch-button" type="submit" value="JOIN wait list" style="font-size:18px;padding:10px; border: 1px solid white; margin-bottom:0"/>
                        </div>
                      </li>
                      <li class="hide">
                        <textarea name="comment" id="comment" rows="1" cols="1"></textarea>
                        <input type="hidden" id="idstamp" name="idstamp" value="H684yQv/MpHLwfRY7XuMX6GzztUbCN+/sptnBCNfjVM=" />
                      </li>
                    </ul>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
  <script>
  $(document).ready(function (){
    // WAITING LIST
    $('#wait-list').click(function(){
      $('#sign-up').slideToggle(300);
      $('#msg-container').slideToggle(300);
      return false;
    })
    // LAUNCH PARTY
    $('.launch-msg').click(function(){
      $('#login-form').slideToggle(300);
      $('#msg-container').slideToggle(300);
      return false;
    })
    // FORM SUBMIT
    $('#thanks-signup').click(function(){
      $('#thanks-container').slideToggle(300);
      $('#sign-up').slideToggle(300);
      return false;
    })
    // THANKS MSG
    $('.thanks-msg').click(function(){
      $('#thanks-container').slideToggle(300);
      $('#msg-container').slideToggle(300);
      return false;
    })
    // BACK TO HOME
    $('#wait-list-back').click(function(){
      $('#sign-up').slideToggle(300);
      $('#msg-container').slideToggle(300);
      return false;
    })
    $('#launch-back').click(function(){
      $('#login-form').slideToggle(300);
      $('#msg-container').slideToggle(300);
      return false;
    })
  });
  </script>
  <script type="text/javascript">
        document.getElementById('password').focus();
  </script>
  </body>
</html>


