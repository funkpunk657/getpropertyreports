      })
    </script>

    <!-- == DESCRIPTION: PRODUCT DIETARY == -->
    <div class="product__dietary-icons-wrapper dsk">
      <div class="padding">
      </div>
      {% include 'dietary-icons' %}
    </div>

    <!-- Product: Ingredients & FAQs -->
    <div id="product__ingredients_faqs">
        
        <!-- Product Details: Ingredients -->
        <div class="product__ingredients content">
          <h2>Ingredients</h2>
          <p>Click an ingredient below to find out why we've included it.</p>
          <!-- Secret Discount -->
          {% include 'secret_discount' %}
          <style>
            .secret__discount-wrapper {
              position: absolute;
              top: 15px;
              right: 30px;
            }
          </style>

          <!-- Product Ingredients: Content -->
          <div class="product__ingredients-wrapper">
            {% include 'ingredients-list' %}
          </div>
          
        </div>
        {% if product.description contains "faq" or product.description contains "FAQ" %}
        <!-- Product Details: FAQs -->
        <div class="product__faqs content">
          <h2>Frequently Asked Questions</h2>
          <p>Browse through some of our most frequently asked questions below.</p>
          <p>Got a question for us? <a href="#product__testimonials">Ask it here</a></p>

          <!-- Product FAQs: Content -->
          <div class="product__faqs-wrapper">
            {% include 'faq-search' %}
          </div>
          
        </div>
      {% endif %}
    </div>

    <!-- Product: Testimonials -->
    {% if settings.show_product_reviews == true %}
      <!-- Script for hiding if there are no reviews yet -->
      <script>
        $(document).ready(function() {
          var checkReviewCount = setInterval(function() {
            // console.log("checking review count");
            if ($('.product__reviews-aggregate .yotpo .text-m').html() == undefined) {
              // console.log("still waiting for Yotpo");
            } else if ($('.product__reviews-aggregate .yotpo .text-m').html() == 'Write a review') {
              $('#product__testimonials, .product__reviews-aggregate').hide();
              clearInterval(checkReviewCount);
            } else {
              clearInterval(checkReviewCount);
            }
          },200);
        });
      </script>

      <div id="product__testimonials">
        <h2 class="product__testimonials-title">Product Reviews</h2>
        <!-- YOTPO Reviews Widget -->
        <div id="product__reviews">
          <div class="reviews">
            <div class="yotpo yotpo-main-widget"
                data-product-id="{{ product.id }}"
                data-name="{{ product.title | escape }}"
                data-url="{{ shop.url }}{{ product.url }}"
                data-image-url="{{ product.featured_image | product_img_url: "large" |replace: '?', '%3F' | replace: '&','%26'}}">
            </div>
          </div>
        </div>
        <!-- GET YOURS button -->
        <a class="button" href="#product"><button class="flat aqua outline large">Get Yours</button></a>
      </div>

    {% endif %}

    <!-- Product: Related Posts -->
    <div id="product__related-posts">
      <h2 class="product__related-posts-title">Recipes &amp; Insights</h2>
