        <div class="product__dietary-icons-wrapper mob">
          <div class="padding">
          </div>
          {% include 'dietary-icons' %}
        </div>
        <!-- Product Details: Content Fader -->
        <div class="content__wrapper fader">
          <!-- ====================================== -->
          <!-- ==== FORM: 4. PRODUCT DESCRIPTION ==== -->
          <!-- ====================================== -->
          <!-- The Product description uses classes in the product text written 
               in the Shopify Product front end. These classes are set by switching the
               view to "View HTML" and applied to the relevant sections. See below:

                1. Product Features    = <ul class="features" > 
                2. Product Subtitle    = <h2 class="product-subtitle">
                3. Product Description = <p class="product-description">
                4. Product FAQs        = <div class="faq">

              Use the above text and Shopify string filters to get the correct info. 
          -->
          <!-- PRODUCT DETAILS NAVIGATION -->
          <div class="product-details-nav header-nav">
            <a class="active link" href="#" data-target=".product__overview">Overview</a>
            <a class="link"        href="#" data-target=".product__features">What does it do?</a>
            <a class="link"        href="#" data-target=".product__directions">Directions</a>
          </div>

          <!-- Product Details: Variant Details (if more than 1 variant) -->
          {% for variant in product.variants %}
            <!-- Product Variants: Setup the metafield descriptions -->
            {% assign count           = forloop.index %}
            {% assign flavor          = variant.option1 | downcase | replace: " ", "-" %}
            {% assign size            = variant.option2 %}
            {% assign overview        = variant.metafields["c_f"]["What is it?"] %}
            {% assign what_does_it_do = variant.metafields["c_f"]["What Does it Do?"] %}
            {% assign directions      = variant.metafields["c_f"]["Directions"] %}
            <!-- Product details: Main Description -->
            <ul id="product-overview" class="product__overview variant {{ flavor }}_{{ size }} content {% if flavor == current_flavor and size == current_size %}active{% endif %} ">
              <li class="title mobile-title show">Overview</li>
              {% if overview contains "<li" %}{{ overview }}{% else %}<li>{{ overview }}</li>{% endif %}
            </ul>
            <!-- Product details: Key Features -->
            <ul id="product-features" class="product__features content variant {{ flavor }}_{{ size }}">
              <li class="title mobile-title">What does it do?</li>
              {% if what_does_it_do contains "<li" %}{{ what_does_it_do }}{% else %}<li>{{ what_does_it_do }}</li>{% endif %}
            </ul>
            <!-- Product details: Directions -->
            <ul id="product-directions" class="product__directions content variant {{ flavor }}_{{ size }}">
              <li class="title mobile-title">Directions</li>
              {% if directions contains "<li" %}{{ directions }}{% else %}<li>{{ directions }}</li>{% endif %}
            </ul>
          {% endfor %}
          <!-- Product Details: Ingredients -->
          <ul id="ingredients" class="product__ingredients content">
            <li class="title mobile-title">Ingredients</li>
            <!-- Product Ingredients: Ingredients -->
            <li class="product__ingredients-ingredients">
              {% for ingredient in product.metafields["ingredients"] %}

                {% assign ingredient_flavor = ingredient | first | replace: "-", " " %}

                <p class="product__ingredient {{ ingredient | first }}">
                  {% if ingredient_flavor == "unflavored" %}
                    <span><strong>Unflavored: </strong></span>
                  {% else %}
                    <span><strong>{{ ingredient_flavor }} Flavor: </strong></span>
                  {% endif %}
                  <span>{{ ingredient | last }}</span></p>
              {% endfor %}
            </li>
            {% for enzyme in product.metafields["enzymes"] %}
              <!-- Product Ingredients: Digestive Enzymes -->
              <li class="product__ingredients-digestive-enzymes">
                <span><strong>Digestive Enzymes: </strong></span>
              </li>
            {% endfor %}
          </ul>
        </div>
      </div>

      {% if product.variants.size == 1 %}
        <!-- Supplement Facts: Modal Popup (Single Variant) -->
        {% if supplement_facts %}
          <div class="supplement-facts">
            <div class="modal fade fact-contents-{{product.handle}}" tabindex="-1" role="dialog" aria-labelledby="large-modal" aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">
                  <img src="{{ supplement_facts | img_url: 'master' }}" class="{{ product.selected_or_first_available_variant.option1 }}"/>
                </div>
              </div>
            </div>
          </div>
        {% endif %}
      {% endif %}

      <!-- Photo Zoom: Modal Popup -->
      <div class="photo-zoom">
        <div class="modal fade photo-zoom-{{product.handle}}" tabindex="-1" role="dialog" aria-labelledby="large-modal" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <img class="photo-zoom__placeholder" />
            </div>
          </div>
        </div>
      </div>

