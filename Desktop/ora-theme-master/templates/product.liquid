          {% include 'product-buy-bar', current_flavor: current_flavor %}

          <!-- Product: Include the Product Callback function to allow the customer to select a variant -->
          {% include 'product-select' %}

          <!-- Product: Include the Discount Landing popup -->
          {% include 'popup__discount-landing' %}

        </div>
