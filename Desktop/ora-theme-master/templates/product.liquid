          <div class="icon-left"></div>
          <div id="slider" class="article-slider" style="opacity: 0;">
          {% for tag in product.tags %}

            {% if tag contains 'search_term' %}
              {% assign search_term = tag | split: "=" %}
            {% endif %}

            {% if tag contains 'recommended_article' %}
              <!-- We have a recommended article, so let's put it into the slider first -->
              {% assign recommended_article_handle = tag | split: "=" | last | prepend: '/' | prepend: 'news' %}
              {% assign recommended_article = articles[recommended_article_handle] %}
              <!-- Get the article excerpt image and content-->
              {% if recommended_article.excerpt contains "excerpt-img" %}
                {% assign src = recommended_article.excerpt | split: '"excerpt-img" src="' %}
                {% assign src = src[1] | split: '"' | first | replace: '//cdn', 'https://cdn' %}
                {% assign articleContent = recommended_article.excerpt | split: '<br>' | last %}
              {% endif %}

              <!-- Recommended Article -->
              <a href="{{ recommended_article.url }}" onclick="window.location.href = '{{ recommended_article.url }}'" class="article-preview recommended_article">
                <div class="article">
                  <div class="image lazy" data-original="{{ src }}" style="background-image: url('{{ src }}')"></div>
                  <h5>{{ recommended_article.title }}</h5>
                  <div class="excerpt">{{ articleContent }}</div>
                  <button class="flat aqua outline" onclick="window.location.href = '{{ recommended_article.url }}'">View Article</button>
                </div>
              </a>

            {% endif %}

          {% endfor %}

          {% if search_term %}
            <!-- If we have a search term, then loop through all articles with that search term and add to recommended -->
            {% for article in blogs["news"].articles %}
                {% if article.content contains search_term[1] %}
                  {% if article.excerpt contains "excerpt-img" %}
                    {% assign src = article.excerpt | split: '"excerpt-img" src="' %}
                    {% assign src = src[1] | split: '"' | first | replace: '//cdn', 'https://cdn' %}
                  {% endif %}
                  <div class="article-preview">
                    <div class="article">
                      <div class="image lazy" data-original="{{ src }}" style="background-image: url('{{ src }}')"></div>
                      <h5>{{ article.title }}</h5>
                      <!-- START ARTICLE CONTENT -->
                      {% if article.excerpt contains "excerpt-img" %}
                      {% assign articleContent = article.excerpt | split: '<br>' %}
                      {% assign articleContent = articleContent[1] %}
                      <div class="excerpt">{{ articleContent }}</div>
                      {% endif %}
                      <button class="flat aqua outline" onclick="window.location.href = '{{ article.url }}'">View Article</button>
                    </div>
                  </div>
                {% endif %}
            {% endfor %}
          {% endif %}
          </div>
          <div class="icon-right"></div>
        </div>
      <!-- == INIT ARTICLE PREVIEW SLIDER == -->
      <script>
        $(document).ready(function() {
          // $('.trigger').click(function() {
            var slider = $("#slider");
            $(slider).slick({
              centerMode: true,
              centerPadding: '90px',
              slidesToShow: 3,
              speed: 500,
              touchToSlide: true,
              swipeToSlide: true,
              infinite: true,
              prevArrow: $('.icon-left'),
              nextArrow: $('.icon-right'),
              responsive: [
                {
                  breakpoint: 1200,
                  settings: {
                    slidesToShow: 2,
                    centerPadding: "45px"
                  }
                },
                {
                  breakpoint: 767,
                  settings: {
                    slidesToShow: 1,
                    centerPadding: "30px"
                  }
                }
              ]
            })
            setTimeout(function() {
              slider.animate({opacity: 1}, 500);
            }, 2000)
          })
        // })
      </script>
    </div>

  </div>
