<!-- BOLD APPS - Product Discount -->
{% include 'bold-product' with product, hide_action: 'break' %}{% if bold_hidden_product %}{% break %}{%endif %}

<!-- CHECK IF ITEM IS FOR SALE, IF NOT, REDIRECT TO SHOP PAGE -->
{% assign for_sale = false %}
{% for collection in product.collections %}
  {% if collection.title contains "Shop" %}
    {% assign for_sale = true %}
  {% endif %}
{% endfor %}

<!-- Amazon Products -->
{% for tag in product.tags %}
  {% if tag contains "link_to_amazon" %}
    {% assign amazon_link = tag | split: "=" | last %}
  {% endif %}
{% endfor %}

{% assign add_to_cart = 'Add to Bag' %}
{% assign sold_out = 'Sold Out' %}
{% assign unavailable = 'Unavailable' %}

<!-- SETUP PRODUCT PAGE IMAGES -->
<!-- Featured Image -->
{% assign featured_image = product.selected_or_first_available_variant.featured_image | default: product.featured_image %}
{% for image in product.images %}
  {% if image.src contains "hero" %}
    {% assign hero_image = image %}
  {% endif %}
  {% if image.src contains "supplement-facts" or image.alt contains "supplement-facts" %}
    {% assign supplement_facts = image %}
  {% endif %}
  {% if image.src contains 'mobile-background' %}
    {% assign mobile_background = image %}
  {% endif %}
  {% if image.src contains 'desktop-background' %}
    {% assign desktop_background = image %}
  {% endif %}
  {% if image.src contains "additional-info" %}
    {% assign additional_info = image %}
  {% endif %}
  {% if image.src contains "buyable-pin" %}
    {% assign buyable_pin = image %}
  {% endif %}
{% endfor %}

<!-- Get Product Type, Flavors, Delivery Method -->
{% for option in product.options_with_values %}
  {% if option.name == "Flavor" %}
    {% assign option_name = "Flavor" %}

    {% if option.values.size > 1 %}
      {% capture flavor %}{% for value in option.values %}{{ value }}{% unless forloop.last %},{% endunless %}{% endfor %}{% endcapture %}
      {% assign flavor_count = option.values.size %}
    {% else %}
      {% assign flavor = value %}
    {% endif %}

  {% else %}

    {% for tag in product.tags %}
      {% if tag contains "flavor=" %}
        {% assign flavor = tag | split: "=" | last %} 
      {% endif %}
    {% endfor %}

  {% endif %}

  {% for tag in product.tags %}
    {% if tag contains "product_type=" %}    {% assign product_type    = tag | split: "=" | last %} {% endif %}
    {% if tag contains "delivery_method=" %} {% assign delivery_method = tag | split: "=" | last %} {% endif %}
  {% endfor %}
{% endfor %}

<!-- Check if product is setup for pre-orders -->
{% if product.tags contains 'pre-order' %}
  {% assign pre_order = true %}
{% endif %}

<!-- Hide preview bar on staging -->
<style>
/*  #preview-bar-iframe {
    display: none !important;
  }*/
</style>

  <!-- Product: Buyable Pin -->
  {% if buyable_pin %}
    <img src="{{ buyable_pin | img_url: 'master' }}" style="opacity: 0; position: absolute; z-index: -100;" alt="{{ product.title }} - Organic, Vegan, Gluten-free, Dairy-free, Soy-free, Non-GMO, Eco-friendly"/>
  {% endif %}

  <div id="product" itemscope itemtype="http://schema.org/Product">
    
    <meta itemprop="url" content="{{ shop.url }}{{ product.url }}" />
    <meta itemprop="image" content="{{ product | img_url: 'grande' }}" />
    
    <!-- Product: Form -->
    <form id="product-form-{{product.id}}" class="quickAdd product__form shapp_qb_prod" data-productid="{{product.id}}" action="/cart/add" method="post" enctype="multipart/form-data">
      <!-- PRODUCT PHOTOS -->
      <div class="shopping-cart-overlay"></div>
      <div class="product__photos">
        {% if product.images.size == 0 %}
        {% else %}
          <div class="product__photos-wrapper">
            <div class="product__photos-grid">

              {% include 'product-photos' %}

            </div>

            <!-- Photo Zoom Trigger (Bootstrap Modal) -->
            <a data-toggle="modal" data-target=".photo-zoom-{{product.handle}}" class="hidden photo-zoom-trigger"></a>

          </div>
          
        {% endif %}

        <!-- Product: Serving Size Changer -->
        <div class="product__size-changer">
          {% assign variant_sizes = sizes | split: "," %}
          {% if variant_sizes.size > 1 %}
            {% for variant in product.variants %}
              {% assign variant_flavor = variant.option1 | downcase | replace: " ", "-" %}
              {% assign variant_size   = variant.option2 %}
              <p data-flavor="{{ variant_flavor }}"
                 data-size="{{ variant_size }}" 
                 data-variant-id=" {{ variant.id }}"
                 class="{% if current_flavor == variant_flavor %}active{% endif %} {% if current_size == variant_size %}selected {% endif %}size_{{variant_size}} {{ variant_flavor }}">
                {{ variant_size }} Serving{% unless variant_size == "1" %}s{% endunless %}
              </p>
            {% endfor %}
            <script>
              /* Change the serving size buttons as well as the product variant selector */
              $('.product__size-changer p').click(function() {

                var new_size = $(this).attr('data-size'),
                    new_flavor = $(this).attr('data-flavor');

                /* Change the selected serving button */
                $(this).parent().children().removeClass('selected');
                $(this).parent().find('p.size_'+new_size).addClass('selected');

                /* Change the size selector */ // I know this is some really really bad javascript
                changeSize($('.product__size-selector .option.size_'+new_size+'.'+new_flavor), true);

              })
            </script>
          {% endif %}
        </div>

      </div>

      <!-- Product Details -->
      <div class="product-details">
        <!-- Product Details: Header -->
        <div class="product-details-header">
          <!-- Product Header: Title -->
          <h1 class="product__title">{{ product.title }}</h1>
          <!-- Product Header: Aggregate Reviews -->
          <div class="product__reviews-aggregate">
            <div class="yotpo bottomLine"
                data-appkey="SmtoQBJliJwFrBjSYjmEtOz31o6nMoLZfgcp3J4j"
                data-domain="{{shop.permanent_domain | escape }}"
                data-product-id="{{ product.id }}"
                data-product-models="{{ product.id }}"
                data-name="{{ product.title | escape }}"
                data-url="{{ shop.url }}{{ product.url }}">
            </div>
          </div>
          <!-- Product Header: Supplement Facts -->
          <a class="facts-trigger link"><i class="linear facts-icon"></i>View Label / Supplement Facts</a>
          <!-- Product Header: Key Features -->
          <p class="product__header-features">{{ product.metafields["c_f"]["Product Features"] }}</p>
        </div>
        <!-- Product: Mobile Summary -->
        <div class="product__mobile-summary mob">
          {% assign product_mobile_summary = product.metafields["homepage"].featured_description %}
          {{ product_mobile_summary }}
        </div>
        <!-- Product Buy Bar -->
        <div id="product__buy-bar" class="wrapper">
          <!-- Product Buy Box: Price -->
          <div class="product__price">
            <h4 class="price">
              <span class="hidden product-price">{{ product.selected_or_first_available_variant.price | money_with_currency }}</span>
              <span class="product__standard-price">{{ product.selected_or_first_available_variant.price | money_with_currency }}</span>
            {% if product.metafields.subscriptions.subscription_id %}
              {% assign discount = 100 | minus: product.metafields.subscriptions.discount_percentage %}
              {% assign subscription_price = product.selected_or_first_available_variant.price | times: discount | divided_by: 100 %}
            {% endif %}
            {% if subscription_price %}
            <span class="product__subscription-price {% if current_size == '1' %}shrink{% endif %}">{{ subscription_price | money_without_currency }}</span>
            <span class="product__subscription-price-text">{% if current_size == "1" %}Free Shipping over $10{% else %} for subscribers{% endif %}</span>
            {% endif %}
            </h4>
            <p class="subscription_message">(Subscriptions for U.S. customers only)</p>
          </div>
          <!-- Check if product is available for pre-order or is sold out -->
          {% assign pre_order = false %}
          {% if product.tags contains 'pre-order' %}
            {% assign pre_order = true %}
            {% for tag in product.tags %}
              {% if tag contains 'pre-order-date=' %} {% assign pre_order_date = tag | split: "=" | last %} {% endif %}
            {% endfor %}
          {% else %}
            {% assign pre_order = false %}
          {% endif %}
          {% unless product.available %}{% if pre_order %}{% assign is_sold_out = false %}{% else %}{% assign is_sold_out = true %}{% endif %}{% endunless %}

