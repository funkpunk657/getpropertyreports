{% layout none %}
<!DOCTYPE html>
<html>
  <head>
    <title>Ora Organic</title>
    <meta name="description" content="Organic Supplements | Plant-based Supplements | Vegan Supplements | Natural Supplements | Pure Supplements | Health & Wellness Supplements">
    {{ 'theme.scss.css' | asset_url | stylesheet_tag }}
    {{ 'full-slider.css' | asset_url | stylesheet_tag }}
    {{ 'custom.scss.css' | asset_url | stylesheet_tag }}
    {{ 'bootstrap-shopify.css' | asset_url | stylesheet_tag }}
    {{ 'jquery.theme.js' | asset_url | script_tag }}
    {{ 'custom.js' | asset_url | script_tag }}
    <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.js" type="text/javascript"></script>
    {{ 'jquery.fancybox.js' | asset_url | script_tag }}
    <link href='//fonts.googleapis.com/css?family=Josefin+Sans:400,700' rel='stylesheet' type='text/css'>
    <script src="{{ 'jquery.zoom.min.js' | asset_url }}" type="text/javascript"></script>
    <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.js"></script>
    <script src="{{ 'wufoo.js' | asset_url }}" type="text/javascript"></script>
    {{ '//downloads.mailchimp.com/js/jquery.form-n-validate.js' | script_tag }}
    {% if template contains 'customers' %}
    {{ 'shopify_common.js' | shopify_asset_url | script_tag }}
    {{ 'customer_area.js'  | shopify_asset_url | script_tag }}
    {% endif %}
      <!--[if lt IE 8]>
    {{ 'json2.js' | shopify_asset_url | script_tag }}
    <![endif]-->
    {{ 'option_selection.js' | shopify_asset_url | script_tag }}
    <link rel="shortcut icon" href="{{ 'favicon.ico' | asset_url }}">
    <link rel="apple-touch-icon" href="{{ 'apple-touch-icon.png' | asset_url }}">
    <link rel="apple-touch-icon" sizes="72x72" href="{{ 'apple-touch-icon-72x72.png' | asset_url }}">
    <link rel="apple-touch-icon" sizes="114x114" href="{{ 'apple-touch-icon-114x114.png' | asset_url }}">
    <script> Shopify.money_format = "{{ shop.money_format }}";</script>
  </head>
  <body style="background: #fff">
    <div class="col-md-12">
      <div id="msg-container" class="col-md-12" style="margin-top:30px; margin-bottom: 50px;">
        <div class="col-md-4 col-lg-4 launch-text" style="display: block; margin: 50px auto; text-align: center;">
          <a class="launch-msg">
            <button class="btn-aqua launch-msgbox">
              <h1><b>Enter<br> the Site</b></h1>
            </button>
          </a>
        </div>
        <div class="col-md-4 col-lg-4" style="display: block; margin: 50px auto; text-align: center">
          <a class="launch-msg">
            <img src="{{'ora-logo2.png' | asset_url }}" style="height:250px;">
          </a>
        </div>
        <div class="col-md-4 col-lg-4 launch-text" style="margin-bottom:20px; display: block; margin: 50px auto; text-align: center;">
          <a href="" id="wait-list" style="text-decoration: none">
            <button class="btn-blue launch-msgbox">
              <h1><b>Join the<br>wait list</b></h1>
            </button>
          </a>
        </div>
        <div class="col-md-12" style="text-align: center; display: block; margin: 50px auto;">
          <h3 style="letter-spacing:2px; line-height:30px; font-size:22px; text-align: center;">SUPPLEMENTS REIMAGINED</h3>
          <h4 style="letter-spacing:2px; line-height:30px; text-align: center;">organic plant-based ingredients<br>proven health benefits<br>chef designed tastes</h4><br><br>
            <div class="blog-social social-icons" style="display: block; margin: 0 auto;">
              <a href="http://facebook.com/ora.organic" target="_blank" class="grey-overlay socialicons"><img src="{{'facebook.png' | asset_url }}"></a>
              <a href="http://instagram.com/ora_organic" target="_blank" class="grey-overlay socialicons"><img src="{{'instagram.png' | asset_url }}"></a>
              <a href="http://twitter.com/ora_organic" target="_blank" class="grey-overlay socialicons"><img src="{{'twitter.png' | asset_url }}"></a>
            </div><br><br>
        </div>
      </div>

      <!-- START LAUNCH FORM -->
      <div id="login-form" class="col-md-12" style="padding-top: 50px; margin-top: 150px; display: none;">
        <div class="col-sm-2 col-md-3 col-lg-4">
        </div>
        <div class="col-xs-12 col-sm-8 col-md-6 col-lg-4">
          {% form 'storefront_password' %}
          <div class="text-center">{{ form.errors | default_errors }}</div>
          <div class="login-box" style="height: 250px; text-align: center; background: #fff;">
            <h1 class="text-center" style="font-size: 40px; padding-top: 20px; padding-bottom: 20px;">Start the show</h1>
            <div id="login_password" class="clearfix large_form" style="margin:10px">
              <input type="password" name="password" value="" id="password" class="long password login-input" placeholder="Insert your launch code" />
            </div>
            <div class="login actions" style="text-align: center; margin-bottom: -65px;">
              <input type="submit" name="commit" class="btn btn-aqua vertical-center" style="border-radius: 0px; font-style:bold; font-size:18px; width:300px; padding:10px" value="launch" />		       
            </div>
          {% endform %}
          </div>
          <a href=""><p id="launch-back" style="margin-top: 30px; color: #5b86c9; text-align: center;">Back to Home</p></a>
        </div>
        <div class="col-sm-2 col-md-3 col-lg-4">
        </div>
      </div>
      <script type="text/javascript">
        document.getElementById('password').focus();
      </script>

      <!-- START WAITING LIST SIGN UP-->
      <div id="sign-up" style="padding-top: 50px; margin-top:150px; display: none; text-align:center">
        <!-- Meta Tags -->
        <meta charset="utf-8">
        <meta name="generator" content="Wufoo">
        <meta name="robots" content="index, follow">

        <!--[if lt IE 10]>
        <script src="https://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <body id="public">
          <div class="col-sm-2 col-md-3 col-lg-4">
          </div>
          <div id="container" class="ltr login-box col-xs-12 col-sm-8 col-md-6 col-lg-4" style="height: 250px; padding:0px">
            <form id="form1" style="text-align:center" name="form1" class="wufoo topLabel page" accept-charset="UTF-8" autocomplete="off" enctype="multipart/form-data" method="post" novalidate action="https://oraorganic.wufoo.com/forms/z1xpzfhd1l00s1c/#public">
              <header id="header" class="info">
              <h1 style="font-size:40px; padding-top: 20px; padding-bottom: 10px;">Get a taste</h1>
              <div></div>
              </header>
              <ul>
                <li id="foli1" class="notranslate" style="margin:auto">
                <div style="text-align:center">
                <input id="Field1" name="Field1" type="email" spellcheck="false" class="field text long login-input" value="" maxlength="255" tabindex="1" placeholder="Email Address" style="margin:0 auto; width: 300px;" required />
                </div>
                </li><br> 
                <li class="buttons ">
                  <div>
                    <input id="saveForm thanks-signup" name="saveForm" class="btTxt submit btn btn-blue" type="submit" value="JOIN wait list" style="border-radius: 0px; font-style:bold; font-size:18px; width:350px; padding:10px"/>
                  </div>
                </li>
                <li class="hide">
                  <textarea name="comment" id="comment" rows="1" cols="1"></textarea>
                  <input type="hidden" id="idstamp" name="idstamp" value="H684yQv/MpHLwfRY7XuMX6GzztUbCN+/sptnBCNfjVM=" />
                </li>
              </ul>
            </form>
            <a href=""><p id="wait-list-back" style="margin-top: 50px; color: #5b86c9">Back to Home</p></a>
          </div>
          <div class="col-sm-2 col-md-3 col-lg-4">
          </div>
        </body>
        
      </div>


    <!--  START THANK YOU MESSAGE  -->
    <div id="thanks-container" class="col-md-12" style="display: none">
      <a href="" class="thanks-msg" style="text-decoration: none">
      <div id="launch-party">
        <div class="vertical-center" >
          <h4 style="color: #fff"><strong>Thanks for signing up! Talk soon...</strong></h4>
        </div>
      </div>
      </a>
      <div style="text-align: center; margin-top: 10%; margin-bottom: 40px;">
        <img src="{{ 'ora-round.png' | asset_url }}" style="max-width:400px">
      </div>
    </div>
    <!--  END THANK YOU MESSAGE  -->
  </div>
  <script>
  $(document).ready(function (){
    // WAITING LIST
    $('#wait-list').click(function(){
      $('#sign-up').slideToggle(300);
      $('#msg-container').slideToggle(300);
      return false;
    })
    // LAUNCH PARTY
    $('.launch-msg').click(function(){
      $('#login-form').slideToggle(300);
      $('#msg-container').slideToggle(300);
      return false;
    })
    // FORM SUBMIT
    $('#thanks-signup').click(function(){
      $('#thanks-container').slideToggle(300);
      $('#sign-up').slideToggle(300);
      return false;
    })
    // THANKS MSG
    $('.thanks-msg').click(function(){
      $('#thanks-container').slideToggle(300);
      $('#msg-container').slideToggle(300);
      return false;
    })
    // BACK TO HOME
    $('#wait-list-back').click(function(){
      $('#sign-up').slideToggle(300);
      $('#msg-container').slideToggle(300);
      return false;
    })
    $('#launch-back').click(function(){
      $('#login-form').slideToggle(300);
      $('#msg-container').slideToggle(300);
      return false;
    })
  });
  </script>
  </body>
</html>
