

{% if page.content contains "table" %}
	{% assign content = page.content | split: "<tr>" %}
	{% for row in content %}
		{% if row contains "Amount" %}  {% assign amount = row | split: "<td>" | last %}{% endif %}
		{% if row contains "Product" %} {% assign product = row | split: "<td>" | last %}{% endif %}
		{% if row contains "Code" %}    {% assign discount_code = row | split: "<td>" | last %}{% endif %}
	{% endfor %}
{% endif %}

<!-- Get Reward Template -->
<div id="get_reward">
	<div class="content">
		<div class="reward__wrapper">
			<h2 class="reward__title">Want {{ amount | replace: "$", "" }} bucks?</h2>
			<p>Want {{ amount }} off your order of <span class="reward__product">{{ product | rstrip }}</span>? Enter your e-mail address below to get your code!</p>
			<div class="reward__actions">
				<!-- Begin MailChimp Signup Form -->
				<div id="mc_embed_signup" class="reward__form">
					<!-- Begin MailChimp Signup Form -->
					<div id="mc_embed_signup">
						<form action="//organic.us10.list-manage.com/subscribe/post?u=9f9076f4aec3c184b4a396d18&amp;id=56ea516894" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
							<div id="mc_embed_signup_scroll">
								<div class="mc-field-group">
									<input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="Enter your e-mail address">
								</div>
								<div class="mc-field-group" style="margin-bottom: 15px; padding-bottom: 15px; border-bottom: 1px solid #e8e8e8;">
									<input type="checkbox" id="accepts_marketing" checked />
									<label>Get more great promotions in your inbox</label>
								</div>
								<div class="mc-field-group" style="display: none;">
									<label for="mce-PRODUCT">Product </label>
									<input type="text" value="" name="PRODUCT" class="" id="mce-PRODUCT" value="{{ product }}">
								</div>
								<div id="mce-responses" class="clear">
								<div class="discount_code" style="display: none; margin-bottom: 15px; padding-bottom: 2.5px; padding-top: 2.5px; border-top: 1px solid #e8e8e8; margin-top: 22.5px; border-bottom: 1px solid #e8e8e8;">
									<h5 style="display: none;">Your code is <span class="discount-code text-accent-1" style="font-weight: 500;">{{ discount_code }}</span></h5>
									<img style="width: 90px; padding: 15px;" src="{{ 'cart-add.gif' | asset_url }}"/>
								</div>
								<div class="response" id="mce-error-response" style="display:none"></div>
								<div class="response" id="mce-success-response" style="display:none"></div>
								</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
								<div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_9f9076f4aec3c184b4a396d18_56ea516894" tabindex="-1" value=""></div>
								<div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button flat aqua"></div>
							</div>
						</form>
					</div>
					<!--End mc_embed_signup-->
				</div>
				<script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script><script type='text/javascript'>(function($) {window.fnames = new Array(); window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';fnames[1]='FNAME';ftypes[1]='text';fnames[2]='LNAME';ftypes[2]='text';fnames[3]='LAST_ORDER';ftypes[3]='date';fnames[4]='COMPANY';ftypes[4]='text';fnames[5]='PHONE';ftypes[5]='phone';fnames[6]='ADDRESS';ftypes[6]='address';fnames[7]='TAGS';ftypes[7]='text';fnames[8]='MMERGE8';ftypes[8]='text';fnames[10]='CAMPAIGN';ftypes[10]='text';fnames[11]='MMERGE11';ftypes[11]='text';fnames[12]='SOURCE';ftypes[12]='text';fnames[13]='MEDIUM';ftypes[13]='text';}(jQuery));var $mcj = jQuery.noConflict(true);</script>
				<!--End mc_embed_signup-->
			</div>
		</div>
	</div>
</div>

<!-- Scripts -->
<script>
	$(document).ready(function() {
		/* Deactivate Form Submit button if marketing box is not ticked */
		$('#accepts_marketing').on('change paste keyup', function() {
			if ($(this).is(':checked')) {
				$('#mc-embedded-subscribe').removeClass('inactive');
			} else {
				$('#mc-embedded-subscribe').addClass('inactive');
			}
		})

		/* Show discount code */
		$('#mc_embed_signup form').on('submit', function() {
			console.log("submitting");

			setTimeout(function() {
				$('.mc-field-group, .reward__wrapper > p').hide();
				$('.discount_code').show();
				setTimeout(function() {
					$('.discount_code img, .reward__form input[type="submit"]').hide();
					$('.discount_code h5').show();
				}, 2000)
				
			}, 1000)
		})

		/* Set code */
		console.log(window.location.hash);
		if (window.location.hash) {

			var product = String(window.location.hash).replace("-", " ").replace("#", "");
			var discount_code;

			switch(window.location.hash) {
				case "#protein":
					discount_code = "GET10-PRTN";
					break;
				case "#pre-workout":
					discount_code = "GET10-WORKOUT";
					break;
			}

			$('.reward__product').html(product);
			$('.discount-code').html(discount_code);

		}

	})
</script>